<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title%></title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/Content/app.css" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Zeyu Ma</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if(title == "Home") { %>
          <li class="nav-item active"><% } else { %></li>
          <li class="nav-item">
            <% } %>

            <a class="nav-link" href="/"
              ><i class="fa fa-lg fa-home"></i> Home
              <span class="sr-only">(current)</span></a
            >
          </li>

          <% if(title == "About") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/about"
              ><i class="fa fa-info-circle" aria-hidden="true"></i> About</a
            >
          </li>

          <% if(title == "Products") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/products"
              ><i class="fa fa-product-hunt" aria-hidden="true"></i> Products</a
            >
          </li>

          <% if(title == "Services") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/services"
              ><i class="fa fa-street-view" aria-hidden="true"></i> Services</a
            >
          </li>
          <% if(title == "Contact") { %>
          <li class="nav-item active"><% } else { %></li>

          <li class="nav-item">
            <% } %>
            <a class="nav-link" href="/contact"
              ><i class="fa fa-phone-square" aria-hidden="true"></i> Contact</a
            >
          </li>

          <% if(typeof displayName == 'string' && displayName) { %>
          <li class="navbar-text">
            <i class="fa fa-user" aria-hidden="true"></i>
            Welcome, 
            <%= displayName %>
          </li>
          <li class="nav-item">
            <a href="/logout" class="nav-link">
              <i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a
            >
          </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/login" class="nav-link">
                <i class="fa fa-sign-in" aria-hidden="true"></i></i> Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </body>
</html>
